{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "Location": {
      "type": "string",
      "defaultValue": "East Us",
      "allowedValues": [
        "East US",
        "Central US",
        "North Central US",
        "South Central US",
        "West US"
      ]
    },
    "T0 Storage Account Name": {
      "type": "string",
      "defaultValue": "t0addsstorage"
    },
    "T0 ADDS Resource Group": {
      "type": "string",
      "defaultValue": "T0-ADDS-East-RG"
    },
    "T0 NSG Resource Group Name": {
      "type": "string",
      "defaultValue": "T0-NSG-East-RG"
    },
    "Global vNet Resource Group Name": {
      "type": "string",
      "defaultValue": "GL-vNet-East-RG"
    },
    "t0storageType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_ZRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ]
    }
  },
  "variables": {
    "t0storageName": "[concat('t0storage', uniqueString(resourceGroup().id))]",
    "_artifactsLocation": "https://github.com/chhatley/Azure/tree/master/Deploy-T0-East/Deploy-T0-East",
    "Deploy ADDS Availability SetTemplateFolder": "nestedtemplates",
    "Deploy ADDS Availability SetTemplateFileName": "Deploy ADDS Availability Set.json",
    "Deploy ADDS Availability SetTemplateParametersFileName": "Deploy ADDS Availability Set.parameters.json"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2018-05-01",
      "location": "[parameters('Location')]",
      "name": "[parameters('T0 ADDS Resource Group')]"
    },
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2018-05-01",
      "location": "[parameters('Location')]",
      "name": "[parameters('T0 NSG Resource Group Name')]"
    },
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2018-05-01",
      "location": "[parameters('Location')]",
      "name": "[parameters('Global vNet Resource Group Name')]"
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "sku": {
        "name": "Standard_LRS",
        "tier": "Standard"
      },
      "kind": "Storage",
      "name": "[parameters('T0 Storage Account Name')]",
      "apiVersion": "2018-07-01",
      "location": "[parameters('location')]",
      "tags": {},
      "scale": null,
      "properties": {
        "networkAcls": {
          "bypass": "AzureServices",
          "virtualNetworkRules": [],
          "ipRules": [],
          "defaultAction": "Allow"
        },
        "supportsHttpsTrafficOnly": false,
        "encryption": {
          "services": {
            "file": {
              "enabled": true
            },
            "blob": {
              "enabled": true
            }
          },
          "keySource": "Microsoft.Storage"
        }
      },
      "dependsOn": [],
      {
        "name": "Deploy ADDS Availability Set",
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2016-09-01",
        "dependsOn": [],
        "properties": {
          "mode": "Incremental",
          "templateLink": {
            "uri": "[concat(variables('_artifactsLocation'), '/', variables('Deploy ADDS Availability SetTemplateFolder'), '/', variables('Deploy ADDS Availability SetTemplateFileName'), variables('_artifactsLocationSasToken'))]",
            "contentVersion": "1.0.0.0"
          },
          "parametersLink": {
            "uri": "[concat(variables('_artifactsLocation'), '/', variables('Deploy ADDS Availability SetTemplateFolder'), '/', variables('Deploy ADDS Availability SetTemplateParametersFileName'), parameters('_artifactsLocationSasToken'))]",
            "contentVersion": "1.0.0.0"
          }
        }
      }
      ]
    }

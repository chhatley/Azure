{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "The name of the Administrator of the new VMs and Domain"
      },
      "defaultValue": "labadmin"
    },
    "domainName": {
      "type": "string",

      "metadata": {
        "description": "AD DS Domain Name."
      },
      "defaultValue": "dc3n.navy.mil"
    },
    "vmName": {
      "type": "string",
      "metadata": {
        "description": "The VM Name"
      }
    }
  },
  "variables": {
    "domainJoinOptions": "3",
    "shortDomainName": "[split(parameters('domainName'),'.')[0]]",
    "ouPath": "",
    "joinUser": "[concat(variables('shortDomainName'), '\\', parameters('adminUsername'))]",
    "joinUserDN": "[concat(parameters('domainName'), '\\', parameters('adminUsername'))]",
    "joinuserUPN": "[concat(parameters('adminUsername'),'@',parameters('domainName'))]",
    "adDC2ModulesURL": "[concat(variables('assetLocation'),'/data/DeployADDS.zip')]",
    "adDC2ConfigurationFunction": "DeployADDS.ps1\\DeployDC2",
    "assetLocation": "https://raw.githubusercontent.com/chhatley/Azure/master/Promote_OPNAV_DC__ADDS_Solution/Promote_OPNAV_ADDS/",

    "VmDomainJoin": "[concat(parameters('vmName'),'/joindomain')]",
    "VmDomainJoinId": "[concat('Microsoft.Resources/deployments/', variables('VmDomainJoin'))]",

    "adminPassword": {
      "reference": {
        "keyVault": {
          "id": "/subscriptions/508ee3b5-9a3f-4e79-985e-f4c0c4972af6/resourceGroups/T0-DIAD-RG/providers/Microsoft.KeyVault/vaults/T0-ADDS-KV-01"
        },
        "secretName": "DomainAdminPassword"
      }
    }
  },
  "resources": [
    {
      "name": "[variables('VmDomainJoin')]",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "JsonADDomainExtension",
        "typeHandlerVersion": "1.3",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "Name": "[parameters('domainName')]",
          "OUPath": "",
          "User": "[variables('joinUserDN')]",
          "Restart": "true",
          "Options": "[variables('domainJoinOptions')]"
        },
        "protectedSettings": {
          "Password": "[variables('adminPassword')]"
        }
      }
    },
    {
      "name": "[concat(parameters('VMName'),'/PromoteDomainController')]",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [
        "[variables('VmDomainJoinId')]"
      ],
      "properties": {
        "publisher": "Microsoft.Powershell",
        "type": "DSC",
        "typeHandlerVersion": "2.8",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "modulesUrl": "[variables('adDC2ModulesURL')]",
          "configurationFunction": "[variables('adDC2ConfigurationFunction')]",
          "properties": {
            "domainName": "[parameters('domainName')]",
            "adminCreds": {
              "userName": "[parameters('adminUserName')]",
              "password": "PrivateSettingsRef:adminPassword"
            }
          }
        },
        "protectedSettings": {
          "items": {
            "adminPassword": "[variables('adminPassword')]"
          }
        }
      }
    }
  ],
    "outputs": {}
  }
